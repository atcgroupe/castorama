{% extends 'core/core.html.twig' %}

{% block content %}
    <a href="{{ path('orders_view', {'id': orderId}) }}" class="btn btn-outline-secondary">Retour à la commande</a>

    <h1 class="h2 text-center text-primary fw-light mt-4 mb-5">Quel type de panneau souhaitez-vous ajouter?</h1>

    <div class="d-flex justify-content-center align-content-center">
        {% for category in categories %}
            <div class="card me-4" style="width: 18rem;">
                <img src="{{ asset(category.chooseFilePath) }}" alt="Illustration {{ category.label }}">

                <div class="card-body text-center">
                    <h3 class="card-title text-secondary">{{ category.label }}</h3>

                    <a
                        href="{{ path(
                            'order_sign_choose',
                            { orderId: orderId, categoryId: category.id }
                        ) }}"
                        class="btn btn-lg btn-primary my-3"
                    >
                        Sélectionner
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
