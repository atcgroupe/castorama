{% extends 'core/core.html.twig' %}

{% if sign.switchSignType == 'FIXED' %}
    {% set title = 'panneau ' ~ sign.fixedSign.title %}
    {% set action = path('fixed_order_sign_delete', {'id': sign.id}) %}
{% elseif sign.switchSignType == 'VARIABLE' %}
    {% set title = 'panneau ' ~ sign.sign.title %}
    {% set action = path('order_sign_delete', {'id': sign.id, 'signType': sign.type}) %}
{% endif %}

{% block content %}
    <div class="row justify-content-md-center">
        <div class="col-lg-6">
            <h1 class="fw-light text-danger my-5 h2 text-center">
                ÃŠtes vous sure<br>de vouloir supprimer ce {{ title|lower }} ?
            </h1>

            <form method="post" action="{{ action }}" class="mt-5">
                <button type="submit" class="btn btn-lg btn-outline-danger w-100 my-3">
                    Supprimer le panneau
                </button>

                <a href="{{ path('orders_view', {'id': sign.order.id}) }}" class="btn btn-outline-secondary w-100">
                    Annuler
                </a>
            </form>
        </div>
    </div>
{% endblock %}
