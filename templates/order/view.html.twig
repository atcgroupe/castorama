{% extends 'core/core.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('orderPrint') }}
{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mt-5 mb-4 d-print-none">
        <div>
            <a href="{{ app.session.get('referer') }}" class="btn btn-outline-secondary">Retour à la liste</a>
        </div>

        <div>
            {% if is_granted('SEND', order) %}
                <a href="{{ path('orders_send', {'id': order.id}) }}" class="btn btn-primary">
                    Valider la commande
                </a>
            {% endif %}

            {% if is_granted('DELETE', order) %}
                <a href="{{ path('orders_delete', {'id': order.id}) }}" class="btn btn-danger">
                    Supprimer la commande
                </a>
            {% endif %}
        </div>
    </div>

    <div class="row mb-5 gx-0 bg-light py-3 px-4 rounded align-items-center border-primary border border-1 d-print-none">
        <div class="col-12 col-lg-6">
            <h1 class="h2 text-primary fw-light mb-1">Commande n° {{ order.id }}</h1>

            <h2 class="h5 fw-light text-primary mb-4">{{ order.title }}</h2>

            <p class="lead">
                {% if not is_granted('ROLE_CUSTOMER_SHOP') %}
                    Magasin: <strong class="text-primary">{{ order.user.userIdentifier }}</strong><br>
                {% endif %}

                Numéro DataMerch:
                {% if order.customerReference %}
                    <strong class="text-primary">{{ order.customerReference }}</strong>
                {% else %}
                    <i class="text-muted">Non défini</i>
                {% endif %}
            </p>

            {% if resume %}
                <p>
                    Prix total de la commande:
                    <strong class="text-primary">
                        {{ resume['global']['price']|format_number({fraction_digit: 2}) }}€
                    </strong>
                    <br>
                    Nombre total de panneaux:
                    <strong class="text-primary">{{ resume['global']['count'] }} Exemplaires</strong>
                    <br>
                    <i>
                        {% for title, data in resume['sign'] %}
                            {{ title }} :
                            <strong class="text-primary">
                                {{ data['count'] }} Exemplaires
                                ( {{ data['countPrice']|format_number({fraction_digit: 2}) }}€ )
                            </strong><br />
                        {% endfor %}
                    </i>
                </p>
            {% endif %}

            {% if is_granted('UPDATE_INFO', order) %}
                <a
                        href="{{ path('orders_update', {'element': 'info', 'id': order.id}) }}"
                        class="btn btn-outline-primary mt-2">
                    Modifier l'intitulé de la commande
                </a>
            {% endif %}
        </div>

        <div class="col-12 col-lg-6 text-end">
            <p class="lead">
                Statut de la commande: <strong class="text-primary">{{ order.status.label }}</strong><br>

                Date de livraison prévue:
                {% if order.deliveryDate %}
                    <strong class="text-primary">{{ order.deliveryDate|date('d/m/Y') }}</strong>
                {% else %}
                    <i class="text-muted">Non définie</i>
                {% endif %}
            </p>

            {% if order.comment %}
                <p>
                    Commentaire à l'attention de l'imprimeur<br>
                    <strong class="text-primary">{{ order.comment }}</strong>
                </p>

                </i>
            {% endif %}

            Créée par: <strong class="text-primary">{{ order.member.displayName }}</strong><br>

            Date de création:
            <strong class="text-primary">{{ order.creationTime|date('d/m/Y à H:m') }}</strong><br>

            Date de dernière modification:
            <strong class="text-primary">{{ order.lastUpdateTime|date('d/m/Y à H:m') }}</strong>

            {% if is_granted('ROLE_COMPANY_ADMIN') %}
                <p class="mt-4">
                    <a
                            href="{{ path('orders_update', {'element': 'status', 'id': order.id}) }}"
                            class="btn btn-outline-primary me-2">
                        Modifier le statut
                    </a>

                    {% if is_granted('UPDATE_DELIVERY_DATE', order) %}
                        <a
                                href="{{ path('orders_update', {'element': 'delivery', 'id': order.id}) }}"
                                class="btn btn-outline-primary">
                            Modifier la date de livraison
                        </a>
                    {% endif %}
                </p>
            {% endif %}
        </div>
    </div>

    <h1 class="h2 fw-light text-primary text-center d-print-none">Liste des panneaux</h1>

    <p class="text-center text-lg-end mt-4 d-print-none">
        {% if is_granted('UPDATE_SIGN', order) %}
            <a href="{{ path('order_sign_choose', {'orderId': order.id}) }}" class="btn btn-outline-primary">
                Ajouter un panneau
            </a>
        {% endif %}
        <a href="#" id="app-signs-print" class="btn btn-outline-secondary">Imprimer la liste</a>
    </p>

    {% if orderSigns is not empty %}
        {{ include('order/_view_signs.html.twig') }}
    {% else %}
        <div class="alert alert-info lead text-center my-5" role="alert">
            Cette commande ne contient aucun panneau pour l'instant.
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('signQuantity') }}
    {{ encore_entry_script_tags('orderPrint') }}
{% endblock %}
