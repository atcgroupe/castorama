<div class="accordion-item">
    <h2 class="accordion-header d-print-none" id="heading{{ itemIndex }}">
        <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapse{{ itemIndex }}"
                aria-expanded="false"
                aria-controls="collapse{{ itemIndex }}">
            {{ categoryLabel }}
        </button>
    </h2>

    <div id="collapse{{ itemIndex }}" class="accordion-collapse collapse" aria-labelledby="heading{{ itemIndex }}">
        <div class="accordion-body">
            {% for item in items %}
                {{  include('order/_view_signs_accordion_item.html.twig', {
                    sign: sign,
                    item: item,
                    signUpdateQuantityPath: path('order_sign_update_quantity', {'id': item.id, 'name': sign.name}),
                    signUpdatePath: path('order_sign_update', {'id': item.id, 'name': sign.name}),
                    signDeletePath: path('order_sign_delete', {'id': item.id, 'name': sign.name})
                }) }}
            {% endfor %}
        </div>
    </div>
</div>
